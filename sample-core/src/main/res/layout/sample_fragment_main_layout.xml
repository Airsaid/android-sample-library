<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/sampleFragmentContainer"
  android:background="@android:color/white"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <androidx.appcompat.widget.Toolbar
    android:id="@+id/sample_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?colorPrimary"
    android:elevation="@dimen/sample_toolbar_elevation"
    android:theme="@style/Sample.AppTheme.AppBarOverlay"
    app:popupTheme="@style/Sample.AppTheme.PopupOverlay" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/sample_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
</LinearLayout>
